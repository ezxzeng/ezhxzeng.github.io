---
layout: default
---
<header class="post-header">
    <h1 class="post-title">{{ page.title }} 
      {% if page.cv_pdf %}
        {% if page.cv_pdf contains '://' -%}
          {% assign pdf_url = page.cv_pdf %}
        {% else %}
          {% assign pdf_url = page.cv_pdf | prepend: 'assets/pdf/' | relative_url%}
        {% endif %}
        <a href="{{ pdf_url }}" target="_blank" rel="noopener noreferrer" class="float-right"><i class="fas fa-file-pdf"></i></a>
      {% endif %}</h1>
      {% if page.description %}<p class="post-description">{{ page.description }}</p>{% endif %}
  </header>


<iframe src="{{ pdf_url}}" style="width: 100%;height: 100vh;border: none;"></iframe>